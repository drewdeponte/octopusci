#!/usr/bin/env ruby

$LOAD_PATH.unshift File.expand_path(File.dirname(__FILE__) + '/../lib')

require 'rubygems'
require 'octopusci/version'
require 'trollop'
require "uri"
require "net/http"
require 'pry'

opts = Trollop::options do
  version "Octopusci v#{Octopusci::Version} (c) Andrew De Ponte"
  banner """Usage: octopusci-post-build-request [-v|--version|-h|--help]"""
  opt :hostname, "Hostname/IP address to send the POST request to", :short => "-n", :default => '127.0.0.1'
  opt :port, "Port number to connect to", :short => "-p", :default => 80
  opt :repo_name, "Repository name to send build request for", :short => "-r", :default => "octopusci"
  opt :branch_name, "Branch name to send build request for", :short => "-b", :default => 'master'
  opt :owner_email, "Repository owner's email address", :short => "-o", :default => 'cyphactor@gmail.com'
  opt :owner_name, "Repository owner's name", :short => "-w", :default => 'cyphactor'
  opt :pusher_name, "Pusher's name", :short => "-u", :default => 'cyphactor'
  opt :pusher_email, "Pusher's email address", :short => "-s", :default => 'pusher@example.com'

  # Added these 3 in order to make this script less hard-coded and more useful.
  opt :commit_one, "A fresh commit's sha1, must be real", :short => "-x", :default => "8573e06a3cb511babd9d19d33be637b661232011"
  opt :commit_two, "A less fresh commit's sha1, must be real", :short => "-y", :default => "771adb4b75694804f256e7e61704648a14d52afc"
  opt :commit_three, "Least fresh commit's sha1, must be real", :short => "-z", :default => "dadf8446b2037960cc6223d60a7d57c5d264fa48"
  
  # The next 2, in Cyph's example case, occur after the last 3. You can confirm this by looking throuh git log as I did. -Keyvan
  opt :commit_before, "A 'before' commit's sha1, must be real", :short => "-f", :default => "c47c0ec4cf88291e6120fbd4fafe03910cde1d4e"
  opt :commit_after, "An 'after' commit's sha1, must be real", :short => "-g", :default => "fdb7494a00961f19d58566f8146b3643c0e14492"
end

http = Net::HTTP.new(opts[:hostname], opts[:port])
path = '/github-build'

# POST request -> logging in
params = { 'payload' => "{\"base_ref\":null,\"ref\":\"refs/heads/#{opts[:branch_name]}\",\"commits\":[{\"message\":\"shit son\",\"removed\":[],\"modified\":[\"test.txt\"],\"added\":[],\"author\":{\"username\":\"#{opts[:owner_name]}\",\"email\":\"#{opts[:owner_email]}\",\"name\":\"Andrew De Ponte\"},\"distinct\":true,\"timestamp\":\"2011-09-06T22:01:12-07:00\",\"id\":\"#{opts[:commit_one]}\",\"url\":\"https://github.com/#{opts[:owner_name]}/#{opts[:repo_name]}/commit/#{opts[:commit_one]}\"},{\"message\":\"again broham\",\"removed\":[],\"modified\":[\"test.txt\"],\"added\":[],\"author\":{\"username\":\"#{opts[:owner_name]}\",\"email\":\"#{opts[:owner_email]}\",\"name\":\"Andrew De Ponte\"},\"distinct\":true,\"timestamp\":\"2011-09-06T23:01:07-07:00\",\"id\":\"#{opts[:commit_two]}\",\"url\":\"https://github.com/#{opts[:owner_name]}/#{opts[:repo_name]}/commit/#{opts[:commit_two]}\"},{\"message\":\"again broham\",\"removed\":[],\"modified\":[\"test.txt\"],\"added\":[],\"author\":{\"username\":\"#{opts[:owner_name]}\",\"email\":\"#{opts[:owner_email]}\",\"name\":\"Andrew De Ponte\"},\"distinct\":true,\"timestamp\":\"2011-09-06T23:03:16-07:00\",\"id\":\"#{opts[:commit_three]}\",\"url\":\"https://github.com/#{opts[:owner_name]}/#{opts[:repo_name]}/commit/#{opts[:commit_three]}\"}],\"created\":false,\"before\":\"#{opts[:commit_before]}\",\"repository\":{\"created_at\":\"2011/09/02 12:40:14 -0700\",\"open_issues\":0,\"forks\":1,\"description\":\"Temp repo for testing pusci as I dev it\",\"has_wiki\":true,\"fork\":false,\"watchers\":1,\"has_downloads\":true,\"homepage\":\"\",\"has_issues\":true,\"private\":false,\"size\":116,\"owner\":{\"email\":\"#{opts[:owner_email]}\",\"name\":\"#{opts[:owner_name]}\"},\"name\":\"#{opts[:repo_name]}\",\"pushed_at\":\"2011/09/06 23:03:21 -0700\",\"url\":\"https://github.com/#{opts[:owner_name]}/#{opts[:repo_name]}\"},\"pusher\":{\"email\":\"#{opts[:pusher_email]}\",\"name\":\"#{opts[:pusher_name]}\"},\"forced\":false,\"after\":\"#{opts[:commit_after]}\",\"deleted\":false,\"compare\":\"https://github.com/#{opts[:owner_name]}/#{opts[:repo_name]}/compare/#{opts[:commit_before][0..6]}...#{opts[:commit_after][0..6]}\"}" }

data = URI.encode_www_form(params)
headers = {
  'Accept' => '*/*',
  'Content-Type' => 'application/x-www-form-urlencoded',
  'X-Github-Event' => 'push'
}

resp, data = http.post(path, data, headers)

puts 'Code = ' + resp.code
puts 'Message = ' + resp.message
resp.each {|key, val| puts key + ' = ' + val}
puts data

binding.pry